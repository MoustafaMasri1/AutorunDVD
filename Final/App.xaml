<Application x:Class="Final.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Final"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        
        <ResourceDictionary>
            
          <!--#region  App Animation-->
            
            <Storyboard x:Key="EnterAnimation">
                <ColorAnimation To="#3FFFFFFF" DecelerationRatio="1.0" Duration="00:00:02"
                            Storyboard.TargetName="search_border" Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"/>
            </Storyboard>
            <Storyboard x:Key="CloseAnimation">
                <ColorAnimation To="#7F414141" DecelerationRatio="1.0" Duration="00:00:0.5"
                            Storyboard.TargetName="search_border" Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"/>
            </Storyboard>


            <Storyboard x:Key="Move0">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="SelectedItemGrid">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0">
                        <EasingDoubleKeyFrame.EasingFunction>
                            <PowerEase EasingMode="EaseInOut"/>
                        </EasingDoubleKeyFrame.EasingFunction>
                    </EasingDoubleKeyFrame>
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>

            <Storyboard x:Key="Move1">
