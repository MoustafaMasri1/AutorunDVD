                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="48">
                        <EasingDoubleKeyFrame.EasingFunction>
                            <PowerEase EasingMode="EaseInOut"/>
                        </EasingDoubleKeyFrame.EasingFunction>
                    </EasingDoubleKeyFrame>
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>

            <Storyboard x:Key="Move2">
