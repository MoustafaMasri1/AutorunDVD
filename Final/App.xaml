                </DoubleAnimationUsingKeyFrames>
            </Storyboard>
            <Storyboard x:Key="Move7">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="SelectedItemGrid">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="336">
